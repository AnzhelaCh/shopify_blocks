
		
		<div class="contact_item item_form">
			<h3 class="item_title">{{ section.settings.item_form_title }}</h3>
			<p>{{ section.settings.item_form_text }}</p>

			{% form 'contact' %}
				{% if form.posted_successfully? %}
					<p class="alert alert-success">{{ 'pages.contact_page_form.submit_success' | t }}</p>
				{% endif %}

				{{ form.errors | default_errors }}

				<div class="grid__item medium-up--one-half">
					<label for="contactFormSubject">Subject</label>
					<div class="contactSubg">
						<svg class="arrowIcon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M15.4995 8.33327L14.0995 6.99994L9.99961 11.3333L5.99961 6.99994L4.59961 8.33327L9.99961 13.9999L15.4995 8.33327Z" fill="#141413"/>
						</svg>
						<select id="contactFormSubject" name="contact[title]" autocapitalize="words">
							{% for block in section.blocks %}
								{% case block.type %}

									{% when 'subjectOption' %}
										<option value="{{ block.settings.subjectOption | truncatewords: 30 }}">{{ block.settings.subjectOption | truncatewords: 30 }}</option>
								{% endcase %}
							{% endfor %}
						</select>
					</div>

				</div>

				<div class="form-group">
					<label  for="contact_form__name">{{ 'pages.contact_page_form.name' | t }}</label>
					<input required type="text" id="contact_form__name" name="contact[name]" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'pages.contact_page_form.name' | t }}">
				</div>

				<div class="form-group">
					<label for="contact_form__email">{{ 'pages.contact_page_form.email' | t }}</label>
					<input required type="email" id="contact_form__email" name="contact[email]" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ csustomer.email }}{% endif %}" placeholder="{{ 'pages.contact_page_form.email' | t }}">
				</div>

				<div class="form-group">
					<label for="contact_form__message">{{ 'pages.contact_page_form.message' | t }}</label>
					<textarea required id="contact_form__message" name="contact[body]" placeholder="{{ 'pages.contact_page_form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
				</div>

				<div class="form-group-btn">
					<button class="btn" type="submit">{{ 'pages.contact_page_form.submit' | t }}</button>
				</div>
			{% endform %}
		</div>


{% schema %}
{
	"name": "Contact form",
	"class": "section section_template__contact_form",
	"settings": [
		
		{
			"type": "header",
			"content": "Contact form"
		},
		{
			"type": "text",
			"id": "item_form_title",
			"label": "Contact form title"
		},
		{
			"type": "textarea",
			"id": "item_form_text",
			"label": "Contact form text"
		}

	],
		"blocks": [
		{
		"type": "subjectOption",
		"name": "Subject option",
		"settings": [
		{
		"id": "subjectOption",
		"type": "text",
		"label": "Subject option",
		"info": "Only 30 words",
		"default": "-"
		}
		]
		}
		]
}
{% endschema %}